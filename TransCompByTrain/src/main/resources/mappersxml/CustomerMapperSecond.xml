<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.CustomerMapper">
    <resultMap id="customerModel" type="company.person.CustomerModel">
        <id property="id_customer" column="id_customer"/>
        <result property="haveAnimal" column="haveAnimal"/>
        <result property="documentCustomer" column="document"/>
        <result property="id_personCustomer" column="id_person"/>
    </resultMap>
    <select id="getCustomerByID" parameterType="java.lang.Integer" resultMap="customerModel">
        select * from customer where id_customer = #{id}
    </select>
    <select id="getCustomers" resultMap="customerModel">
        select * from customer
    </select>
</mapper>