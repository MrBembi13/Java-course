<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.PersonMapper">
    <resultMap id="person" type="company.person.Person">
        <id property="id_person" column="id_person"/>
        <result property="name" column="name"/>
        <result property="surname" column="surname"/>
    </resultMap>
    <select id="getPersonByID" parameterType="java.lang.Integer" resultMap="person">
        select * from person where id_person = #{id}
    </select>
    <select id="getPersons" resultMap="person">
        select * from person
    </select>
</mapper>